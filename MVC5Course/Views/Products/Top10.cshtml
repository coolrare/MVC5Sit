@model IEnumerable<MVC5Course.Models.ProductCreationVM>

@{
    ViewBag.Title = "Top10";
}

<h2>Top10</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("提高價格", "PriceUp")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderLineCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderLineCount)
        </td>
        <td>
            @Html.ActionLink("提高價格", "PriceUp", new { id=item.ProductId })
        </td>
    </tr>
}

</table>
